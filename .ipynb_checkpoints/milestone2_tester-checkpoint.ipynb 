    "# milestone2_tester.ipynb  (single cell)\n",
    "import requests, json\n",
    "base = \"http://127.0.0.1:5000\"\n",
    "\n",
    "def pretty(x): print(json.dumps(x, indent=2))\n",
    "\n",
    "# create one (if you didn't use the homepage form)\n",
    "created = requests.post(f\"{base}/ingest\", params={\"city\":\"Chicago\",\"country\":\"US\"}).json()\n",
    "pretty(created)\n",
    "oid = created[\"id\"]\n",
    "\n",
    "# update note\n",
    "pretty(requests.put(f\"{base}/observations/{oid}\",\n",
    "                    json={\"notes\":\"Perfect weather for a campus walk!\"}).json())\n",
    "\n",
    "# read one\n",
    "pretty(requests.get(f\"{base}/observations/{oid}\").json())\n",
    "\n",
    "# delete\n",
    "pretty(requests.delete(f\"{base}/observations/{oid}\").json())\n",
    "\n",
    "# list all\n",
    "pretty(requests.get(f\"{base}/observations\").json())\n"
   ]
